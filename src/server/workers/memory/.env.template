# src/server/workers/memory/.env.template
# LLM Configuration for the Qwen Agent
LLM_PROVIDER="OLLAMA" # Options: "OLLAMA", "OPENROUTER"
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL_NAME="qwen" # e.g., "qwen", "llama3"
OPENROUTER_API_KEY=""
OPENROUTER_MODEL_NAME="qwen/qwen-7b-chat"

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
# Topic to consume memory operations FROM
MEMORY_OPERATIONS_TOPIC="memory_operations"
# Consumer Group ID
KAFKA_CONSUMER_GROUP_ID="memory_worker_group"

# URL for the Memory MCP Server this worker will talk to
MEMORY_MCP_SERVER_URL="http://localhost:8001/sse"

# MongoDB Configuration (optional, for logging)
MONGO_URI="mongodb://localhost:27017/"
MONGO_DB_NAME="sentient_db"