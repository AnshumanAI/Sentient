# src/server/.env.template
# --- Environment ---
ENVIRONMENT=dev # dev, stag, prod, selfhost

# --- Auth0 Configuration (from your 'dev' M2M App) ---
AUTH0_DOMAIN=<your-tenant>.auth0.com
AUTH0_AUDIENCE=<your-dev-api-identifier>
SELF_HOST_AUTH_SECRET=<generate_a_strong_secret_for_self_hosting_if_using_that_mode>
AUTH0_CLIENT_ID=<your-dev-client-id>
AUTH0_CLIENT_SECRET=<your-dev-client-secret>
AUTH0_MANAGEMENT_CLIENT_ID=<your-dev-m2m-client-id>
AUTH0_MANAGEMENT_CLIENT_SECRET=<your-dev-m2m-secret>
AUTH0_SCOPE="openid profile email offline_access read:profile write:profile read:tasks write:tasks read:notifications read:config write:config admin:user_metadata read:contacts write:contacts"

# --- Database ---
# IMPORTANT: If your password contains special characters like '@', ':', '/', or '+', you MUST URL-encode them.
# Example: 'my@password' should become 'my%40password'.
MONGO_URI="mongodb+srv://<user>:<url_encoded_password>@<cluster>.mongodb.net/"
MONGO_DB_NAME=sentient_dev_db

# --- PostgreSQL Database (for Memory MCP) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=test
POSTGRES_PASSWORD=test
POSTGRES_DB=mcp_memory

# --- Task Queue (Celery) ---
# IMPORTANT: If your Redis password contains special characters, it must be URL-encoded.
# Example: 'my#pass' should become 'my%23pass'
REDIS_PASSWORD=<your_redis_password>
CELERY_BROKER_URL="redis://:<url_encoded_password>@<host>:<port>/0"
CELERY_RESULT_BACKEND="redis://:<url_encoded_password>@<host>:<port>/0"

# --- Vector DB (Chroma) ---
CHROMA_HOST=localhost # Or the address of your ChromaDB instance
CHROMA_PORT=8002

# --- LLM & Embedding Configuration ---
# You can point this to any OpenAI API compatible service (OpenAI, Groq, Together, vLLM, Ollama).
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=<your_openai_api_key>
OPENAI_API_KEY_FALLBACK_1=
OPENAI_API_KEY_FALLBACK_2=
OPENAI_MODEL_NAME=gpt-4o-mini
# For Gemini embeddings, used by the Memory MCP
GEMINI_API_KEY=<your-gemini-api-key>
EMBEDDING_MODEL_NAME=models/gemini-embedding-001

# --- Voice Configuration ---
STT_PROVIDER=FASTER_WHISPER # Can be FASTER_WHISPER or ELEVENLABS
TTS_PROVIDER=ORPHEUS       # Can be ORPHEUS or ELEVENLABS
ELEVENLABS_API_KEY=<your_elevenlabs_api_key_if_using>
# Path for local Orpheus model (if TTS_PROVIDER=ORPHEUS)
FASTER_WHISPER_MODEL_SIZE=base # Options: tiny, base, small, medium, large
FASTER_WHISPER_DEVICE=cuda # Options: cpu, cuda
FASTER_WHISPER_COMPUTE_TYPE=float16 # Options: int8, float16, float32
ORPHEUS_MODEL_PATH="src/server/main/voice/models/orpheus-3b-0.1-ft-q4_k_m.gguf"

# --- File Management ---
# Directory for temporary file uploads and agent scratchpads.
FILE_MANAGEMENT_TEMP_DIR=/tmp/sentient_files
# How often to check for old files to delete (in seconds). Default: 3600 (1 hour).
FILE_CLEANUP_INTERVAL_SECONDS=3600
# How old a file must be to be deleted (in seconds). Default: 86400 (24 hours).
FILE_MAX_AGE_SECONDS=86400

# --- 3rd Party APIs ---
POSTHOG_KEY=<your_posthog_project_api_key>
POSTHOG_HOST=<your_posthog_host> 
NEWS_API_KEY=<your-news-api-key>
